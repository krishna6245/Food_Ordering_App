<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreen">

    <ImageView
        android:id="@+id/splashScreenAppLogo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/app_logo"
        android:layout_marginTop="110dp"
        android:contentDescription="@string/app_logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/splashScreenAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/yeonsung_regular"
        android:textSize="40sp"
        android:textColor="@color/accent_color"
        android:textAllCaps="false"
        android:text="@string/application_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/splashScreenAppLogo"/>

    <TextView
        android:id="@+id/splashScreenAppMotto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_motto"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:textColor="@color/accent_color"
        android:fontFamily="@font/yeonsung_regular"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/splashScreenAppName"/>

    <TextView
        android:id="@+id/splashActivityAppDesigner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Designed By:-\nKrishna Agrawal"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/lato_regular"
        android:textColor="@color/accent_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/splashScreenAppMotto"
        app:layout_constraintStart_toStartOf="@+id/splashScreenAppMotto" />

</androidx.constraintlayout.widget.ConstraintLayout>