<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/pendingOrderItemImage"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="20dp"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/add_icon" />

            <TextView
                android:id="@+id/pendingOrderItemCustomerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customer Name"
                android:textSize="22sp"
                android:fontFamily="@font/yeonsung_regular"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toEndOf="@+id/pendingOrderItemImage"
                app:layout_constraintTop_toTopOf="@+id/pendingOrderItemImage" />

            <TextView
                android:id="@+id/pendingOrderItemQuantityText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity"
                android:textSize="18sp"
                android:fontFamily="@font/yeonsung_regular"
                android:layout_marginBottom="10dp"
                app:layout_constraintBottom_toBottomOf="@id/pendingOrderItemImage"
                app:layout_constraintStart_toStartOf="@id/pendingOrderItemCustomerName"/>

            <TextView
                android:id="@+id/pendingOrderItemQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:fontFamily="@font/yeonsung_regular"
                android:textSize="20sp"
                android:textColor="@color/accent_color"
                android:layout_marginStart="5dp"
                app:layout_constraintBottom_toBottomOf="@+id/pendingOrderItemQuantityText"
                app:layout_constraintStart_toEndOf="@+id/pendingOrderItemQuantityText"
                app:layout_constraintTop_toTopOf="@+id/pendingOrderItemQuantityText" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/pendingOrderItemDispatchButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dispatch"
                android:background="@drawable/custom_button"
                android:textColor="@color/white"
                android:fontFamily="@font/yeonsung_regular"
                android:layout_marginEnd="10dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:textSize="18sp"
                android:textAllCaps="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>