<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GetUserDataActivity">

  <ImageView
      android:id="@+id/getUserDataActivityAppLogo"
      android:layout_width="150dp"
      android:layout_height="150dp"
      android:layout_marginTop="30dp"
      android:contentDescription="@string/app_logo"
      android:src="@drawable/app_logo"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/getUserDataActivityAppName"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="15dp"
      android:fontFamily="@font/yeonsung_regular"
      android:text="@string/application_name"
      android:textAllCaps="false"
      android:textColor="@color/accent_color"
      android:textSize="50sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/getUserDataActivityAppLogo" />

  <TextView
      android:id="@+id/getUserDataActivityAppTitleText"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:fontFamily="@font/yatraone_regular"
      android:gravity="center"
      android:text="Complete your profile"
      android:textColor="@color/accent_color"
      android:textSize="20sp"
      android:layout_marginTop="20dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/getUserDataActivityAppName" />

