  <androidx.appcompat.widget.AppCompatEditText
      android:id="@+id/getUserDataActivityOwnerName"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="25dp"
      android:layout_marginTop="10dp"
      android:layout_marginEnd="25dp"
      android:background="@drawable/custom_editview"
      android:drawableStart="@drawable/name_icon"
      android:drawablePadding="15dp"
      android:fontFamily="@font/yatraone_regular"
      android:hint="Owner Name"
      android:inputType="text"
      android:paddingStart="30dp"
      android:paddingTop="15dp"
      android:paddingEnd="15dp"
      android:paddingBottom="15dp"
      android:textSize="16sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/getUserDataActivityAppTitleText" />

  <androidx.appcompat.widget.AppCompatEditText
      android:id="@+id/getUserDataActivityBusinessName"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="25dp"
      android:layout_marginTop="10dp"
      android:layout_marginEnd="25dp"
      android:background="@drawable/custom_editview"
      android:drawableStart="@drawable/restaurant_icon"
      android:drawablePadding="15dp"
      android:fontFamily="@font/yatraone_regular"
      android:hint="Business Name"
      android:inputType="text"
      android:paddingStart="30dp"
      android:paddingTop="15dp"
      android:paddingEnd="15dp"
      android:paddingBottom="15dp"
      android:textSize="16sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/getUserDataActivityOwnerName" />

  <androidx.appcompat.widget.AppCompatEditText
      android:id="@+id/getUserDataActivityPhoneNumber"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="25dp"
      android:layout_marginTop="10dp"
      android:layout_marginEnd="25dp"
      android:background="@drawable/custom_editview"
      android:drawableStart="@drawable/phone_icon"
      android:drawablePadding="15dp"
      android:fontFamily="@font/yatraone_regular"
      android:hint="Phone Number"
      android:inputType="phone"
      android:paddingStart="30dp"
      android:paddingTop="15dp"
      android:paddingEnd="15dp"
      android:paddingBottom="15dp"
      android:textSize="16sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/getUserDataActivityBusinessName" />

  <androidx.appcompat.widget.AppCompatButton
      android:id="@+id/getUserDataActivitySaveInformationButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="12dp"
      android:background="@drawable/custom_button"
      android:fontFamily="@font/yeonsung_regular"
      android:paddingStart="40dp"
      android:paddingTop="20dp"
      android:paddingEnd="40dp"
      android:paddingBottom="20dp"
      android:textAllCaps="false"
      android:text="Save Information"
      android:textSize="20dp"
      android:textColor="@color/white"
      android:layout_marginBottom="40dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>